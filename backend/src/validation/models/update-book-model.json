{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "update todo object",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "author": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
        },
        "description": {
            "type": "string",
            "minLength": 3
        },
        "read": {
            "type": "boolean"
        },
        "rating": {
            "type": "number",
            "maximum": 5,
            "minimum": 1
        }
    },
    "additionalProperties": false
}